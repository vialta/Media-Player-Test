<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".galleryplaylist.activity.GalleryPlaylistActivity">
<ScrollView
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.virgiltanase.mediaplayertest.galleryplaylist.recyclerview.galleryRecycler.GalleryRecyclerView
            android:id="@+id/galleryRecyclerView"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#dedede"
            android:dividerHeight="8dp"
            />
        <com.virgiltanase.mediaplayertest.galleryplaylist.recyclerview.playlistRecycler.PlaylistRecyclerView
            android:id="@+id/playlistRecyclerView"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/galleryRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#dedede"
            android:dividerHeight="8dp"/>
        <VideoView
            android:id="@+id/videoView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/playlistRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="320dp"
            android:layout_height="240dp"/>

        <ImageButton
            android:id="@+id/previous_button"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_previous"
            />
        <ImageButton
            android:id="@+id/start_stop_button"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintStart_toEndOf="@id/previous_button"
            app:layout_constraintTop_toBottomOf="@id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            />
        <ImageButton
            android:id="@+id/next_button"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintStart_toEndOf="@id/start_stop_button"
            app:layout_constraintTop_toBottomOf="@id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_next"
            />
        <ImageButton
            android:id="@+id/shuffle_button"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintStart_toEndOf="@id/next_button"
            app:layout_constraintTop_toBottomOf="@id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shuffle"
            />
        <ImageButton
            android:id="@+id/repeat_button"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintStart_toEndOf="@id/shuffle_button"
            app:layout_constraintTop_toBottomOf="@id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_repeat"
            />
        <ImageButton
            android:id="@+id/autoplay_button"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintStart_toEndOf="@id/repeat_button"
            app:layout_constraintTop_toBottomOf="@id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_autoplay"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>